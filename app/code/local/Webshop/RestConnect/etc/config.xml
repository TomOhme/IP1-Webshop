<?xml version="1.0"?>
<config>
    <modules>
        <Webshop_RestConnect>
            <version>0.1.0</version>
        </Webshop_RestConnect>
    </modules>
    <frontend>
        <routers>
            <restconnect>
                <use>standard</use>
                <args>
                    <module>Webshop_RestConnect</module>
                    <frontName>restconnect</frontName>
                </args>
            </restconnect>
        </routers>
    </frontend>
    <global>
        <models>
            <restconnect>
                <class>Webshop_RestConnect_Model</class>
                <resourceModel>restconnect_resource</resourceModel>
            </restconnect>
            <restconnect_resource>
                <class>Webshop_RestConnect_Model_Resource</class>
                <entities>
                    <blogpost>
                        <table>blog_posts</table>
                    </blogpost>
                </entities>
            </restconnect_resource>
        </models>
        <helpers>
            <restconnect>
                <class>Webshop_RestConnect_Helper</class>
            </restconnect>
        </helpers>
    </global>
</config>